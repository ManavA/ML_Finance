# ML Finance Trading System - Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys for Data Sources
POLYGON_API_KEY=your_polygon_api_key_here
CMC_API_KEY=your_coinmarketcap_api_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# AWS Credentials (for S3 data)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Bybit API (for derivatives)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# Sanbase/Santiment (for on-chain metrics)
SANBASE_API_KEY=your_sanbase_api_key_here

# Database (optional)
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ml_trading

# Notification Services (optional)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Server (optional)
API_SECRET_KEY=your_random_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO